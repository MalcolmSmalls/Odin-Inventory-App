        value={{#if_eq tags.tag1 undefined}} '' {{else}} {{tags.tag1}} {{/if_eq}}
    
    />

    <label for="tag2">Tag 2:</label>
    <input 
        type="text"
        name="tag2"
        id="tag2"
        value={{#if_eq tags.tag2 undefined}} '' {{else}} {{tags.tag2}} {{/if_eq}}
    
    />

    <label for="tag3">Tag 3:</label>
    <input 
        type="text"
        name="tag3"
        id="tag3"
        value={{#if_eq tags.tag3 undefined}} '' {{else}} {{tags.tag3}} {{/if_eq}}
    
    />
    

